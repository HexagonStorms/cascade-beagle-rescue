{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
            "palette": [
                {
                    "name": "Rescue Primary",
                    "slug": "rescue-primary",
                    "color": "#2d8f47"
                },
                {
                    "name": "Rescue Secondary", 
                    "slug": "rescue-secondary",
                    "color": "#4a90a4"
                },
                {
                    "name": "Rescue Accent",
                    "slug": "rescue-accent", 
                    "color": "#f39c12"
                },
                {
                    "name": "Rescue Text",
                    "slug": "rescue-text",
                    "color": "#333333"
                },
                {
                    "name": "Rescue Light Text",
                    "slug": "rescue-text-light",
                    "color": "#666666"
                },
                {
                    "name": "Rescue Background",
                    "slug": "rescue-background",
                    "color": "#ffffff"
                },
                {
                    "name": "Rescue Alt Background",
                    "slug": "rescue-background-alt",
                    "color": "#f8f9fa"
                }
            ],
            "custom": true,
            "customDuotone": true,
            "customGradient": true
        },
        "typography": {
            "customFontSize": true,
            "fontSizes": [
                {
                    "name": "Small",
                    "slug": "small",
                    "size": "0.875rem"
                },
                {
                    "name": "Medium",
                    "slug": "medium", 
                    "size": "1rem"
                },
                {
                    "name": "Large",
                    "slug": "large",
                    "size": "1.25rem"
                },
                {
                    "name": "Extra Large",
                    "slug": "x-large",
                    "size": "1.5rem"
                },
                {
                    "name": "Huge",
                    "slug": "huge",
                    "size": "2rem"
                }
            ]
        },
        "spacing": {
            "padding": true,
            "margin": true,
            "units": ["px", "em", "rem", "vh", "vw", "%"]
        },
        "border": {
            "color": true,
            "radius": true,
            "style": true,
            "width": true
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--rescue-background)",
            "text": "var(--wp--preset--color--rescue-text)"
        },
        "typography": {
            "fontFamily": "inherit",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.6"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--rescue-primary)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--rescue-secondary)"
                    }
                }
            },
            "button": {
                "color": {
                    "background": "var(--wp--preset--color--rescue-primary)",
                    "text": "var(--wp--preset--color--rescue-background)"
                },
                "border": {
                    "radius": "5px"
                },
                "spacing": {
                    "padding": {
                        "top": "0.75rem",
                        "right": "1.5rem", 
                        "bottom": "0.75rem",
                        "left": "1.5rem"
                    }
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--rescue-secondary)"
                    }
                }
            },
            "heading": {
                "color": {
                    "text": "var(--wp--preset--color--rescue-text)"
                },
                "typography": {
                    "fontWeight": "600",
                    "lineHeight": "1.3"
                }
            }
        },
        "blocks": {
            "core/group": {
                "spacing": {
                    "padding": {
                        "top": "1rem",
                        "right": "1rem",
                        "bottom": "1rem", 
                        "left": "1rem"
                    }
                }
            },
            "core/post-title": {
                "color": {
                    "text": "var(--wp--preset--color--rescue-primary)"
                }
            },
            "core/site-title": {
                "color": {
                    "text": "var(--wp--preset--color--rescue-primary)"
                },
                "typography": {
                    "fontWeight": "700"
                }
            }
        }
    },
    "customTemplates": [
        {
            "name": "page-full-width",
            "title": "Full Width Page",
            "postTypes": ["page"]
        },
        {
            "name": "page-adoption",
            "title": "Dog Adoption Page", 
            "postTypes": ["page"]
        }
    ],
    "templateParts": [
        {
            "name": "header-rescue",
            "title": "Rescue Header",
            "area": "header"
        },
        {
            "name": "footer-rescue", 
            "title": "Rescue Footer",
            "area": "footer"
        }
    ]
}